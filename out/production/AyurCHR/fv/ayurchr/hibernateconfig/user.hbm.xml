<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="fv.ayurchr.dbobjects.hibernate.User" table="USER" entity-name="USER">
        <id name="id" type="long" column="ID">
            <generator class="native"/>
        </id>
		
		<property name="loginId">
            <column name="LOGINID"/>
        </property>
        <property name="firstName">
            <column name="FIRSTNAME"/>
        </property>
         <property name="middleName">
            <column name="MIDDLENAME"/>
        </property>
        <property name="lastName">
            <column name="LASTNAME"/>
        </property>
        <property name="password">
            <column name="PASSWORD"/>
        </property>
        <property name="type">
            <column name="TYPE"/>
        </property>
        <property name='roleId'>
            <column name="ROLEID"/>
        </property>
         <property name="identification">
            <column name="IDENTIFICATION"/>
        </property>
        <property name='address_Street' type="java.lang.String">
            <column name="ADDRESS_STREET"/>
        </property>
        <property name='address_HouseNo' type="java.lang.String">
            <column name="ADDRESS_HOUSENO"/>
        </property>
        <property name='address_Community' type="java.lang.String">
            <column name="ADDRESS_COMMUNITY"/>
        </property>
        <property name='address_City' type="java.lang.String">
            <column name="ADDRESS_CITY"/>
        </property>
        <property name='address_District' type="java.lang.String">
            <column name="ADDRESS_DISTRICT"/>
        </property>
        <property name='address_State' type="java.lang.String">
            <column name="ADDRESS_STATE"/>
        </property>
        <property name='address_PinCode' type="long">
            <column name="ADDRESS_PINCODE"/>
        </property>
        <property name='address_Country' type="java.lang.String">
            <column name="ADDRESS_Country"/>
        </property>
        <property name='phoneNumber' type="java.lang.String">
            <column name="PHONENUMBER"/>
        </property>
        <property name='phoneNumber_Emergency' type="java.lang.String">
            <column name="PHONENUMBER_EMERGENCY"/>
        </property>
        <property name='dateOfBirth' type="java.util.Date">
            <column name="DATEOFBIRTH"/>
        </property>
    </class>
</hibernate-mapping>